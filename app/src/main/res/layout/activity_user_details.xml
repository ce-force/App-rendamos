<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".user.UserDetails">


    <ImageView
        android:id="@+id/view_user_avatar_imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/text_margin"
        android:text="Ciclo de desarrollo integral"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/text_margin"
        android:text="ID" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginBottom="10dp"
        android:text="@string/sample_string"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/text_margin"
        android:text="Nombre" />

    <TextView
        android:id="@+id/asq3Name"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginBottom="10dp"
        android:text="@string/sample_string"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/text_margin"
        android:text="Fecha de Nacimiento" />

    <TextView
        android:id="@+id/asq3Birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginBottom="10dp"
        android:text="@string/sample_string"
        android:textColor="@android:color/black"
        android:textSize="24sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/text_margin"
        android:text="Semanas de Prematuro" />

    <TextView
        android:id="@+id/premWeeks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginBottom="10dp"
        android:text="@string/sample_string"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/text_margin"
        android:text="Tipo de Examen" />

    <TextView
        android:id="@+id/examType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginBottom="10dp"
        android:text="@string/sample_string"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="395dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/appDate"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/text_margin"
            android:text="Fecha de aplicacion" />

        <TextView
            android:id="@+id/examDate"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appDate"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginBottom="10dp"
            android:text="@string/sample_string"
            android:textColor="@android:color/black"
            android:textSize="24sp" />


    </RelativeLayout>

    <Button
        android:id="@+id/exButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toHistorial"

        android:text="Ver Historial" />

    <Button
        android:id="@+id/exButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejecutar Prueba"

        />


</LinearLayout>